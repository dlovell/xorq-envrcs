this_dir=$(dirname "$(realpath "${BASH_SOURCE[0]}")")

source_env .envrc.sops

# avoid per-file sops cost
use sops_if_exists $this_dir/.env.secrets.concatenated.sops-encrypted

# https://github.com/getsops/sops/issues/965: can't do multiline dotenv, so use binary
# note: non-dotenv sops files must export their vars
use sops_if_exists $this_dir/secrets/.env.secrets.snowflake.keypair.export.sops-encrypted binary
